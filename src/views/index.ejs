      <div id="latestContainer">
        <% for(let recipe of latestRecipes) {%>
            <div class="latestRecipes">
              <img src="images/2.jpg" alt="">
              <h2><%= recipe.title %> </h2>

              <div class="latestRecipes-description">
                <p>
                  <span><i class="fa-regular fa fa-clock"></i></span>
                  <%=recipe.fullTime %>
                </p>
                <p>
                  <i class="fa-solid fa-dumbbell"></i>
                  <%=recipe.difficult %>
                </p>
                <p>
                  <i class="fa-solid fa-people-group"></i>
                  <%=recipe.portion %>
                </p>
                <p>
                  <i class="fa-solid fa-dollar-sign"></i>
                  <%=recipe.cost %>
                </p>
              </div>
            </div>
        <% } %> 
      </div>

