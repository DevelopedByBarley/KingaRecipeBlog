<div id="recipe-container">
  <% recipes.forEach(function(recipe) { %>
    <div class="recipe-box">
      <div class="recipe-image-container">
        <img src="/images/2.jpg" alt="">
      </div>
      <div class="recipe-info">
        <h1>
          <%= recipe.title %>
        </h1>
        <hr>
        <div class="recipe-description">
          <p>
            <span><i class="fa-regular fa fa-clock"></i></span>
            <%=recipe.duration %>
          </p>
          <p>
            <i class="fa-solid fa-dumbbell"></i>
            <%=recipe.difficult %>
          </p>
          <p>
            <i class="fa-solid fa-people-group"></i>
            <%=recipe.portion %>
          </p>
          <p>
            <i class="fa-solid fa-dollar-sign"></i>
            <%=recipe.cost %>
          </p>
        </div>
        <div class="recipe-box-nav">
          <a href="/recipes/recipe/<%=recipe._id%> " class="recipe-box-btn" data-id="<%= recipe._id %>"><i class="fa-regular fa-2x fa-eye"></i></a>
          <button class="recipe-box-btn " data-id="<%= recipe._id %>"><i class="fa-regular fa-2x fa-pen-to-square"></i></button>
          <button class="recipe-box-btn deleteRecipeBtn" data-id="<%= recipe._id %>"><i class="fa-regular fa-2x fa-trash-can"></i></button>
        </div>
      </div>
    </div>
    <% }); %>
</div>